        }

        .form-control {
            border-radius: 4px;
            padding: 10px;
            border: 1px solid #444;
            background-color: #222;
            color: #fff;
            width: 100%;
        }

        .form-control:focus {
            border-color: #4CAF50;
            box-shadow: 0 0 8px rgba(76, 175, 80, 0.7);
        }

        .btn-primary {
            background-color: #4CAF50;
            color: #fff;
            border: none;
            padding: 10px 20px;
            width: 100%;
            border-radius: 4px;
            cursor: pointer;
            font-size: 1.1rem;
        }

        .btn-primary:hover {
            background-color: #45a049;
            transition: background-color 0.3s;
        }

        textarea.form-control {
            background-color: #222;
            color: #fff;
            border: 1px solid #444;
        }

        /* File Input */
        input[type="file"] {
            padding: 10px;
            color: #fff;
            background-color: #222;
            border: 1px solid #444;
            border-radius: 4px;
            width: 100%;
        }

        input[type="file"]:focus {
            border-color: #4CAF50;
            box-shadow: 0 0 8px rgba(76, 175, 80, 0.7);
        }
        @media (max-width: 768px) {
            .benifit {
                padding: 20px;
            }
            .form-control {
                font-size: 0.9rem;
            }
            .btn-primary {
