<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Beneficiaries List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(135deg, #121212, #333);
            margin: 0;
            padding: 0;
            color: #f5f5f5;
        }

        h1 {
            text-align: center;
            color: #fff;
            margin-top: 20px;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
        }
        .table-container {
            width: 90%;
            margin: 20px auto;
            padding: 20px;
            background-color: rgba(28, 28, 28, 0.8); 
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.4);
            overflow-x: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border: 1px solid #444;
        }

        th {
            background-color: #333;
            color: #fff;
            font-weight: bold;
        }

        td {
            background-color: #222;
            color: #ccc;
        }

        tr:nth-child(even) td {
            background-color: #2a2a2a;
        }

        tr:hover td {
            background-color: #4CAF50; 
            color: #fff;
            transition: background-color 0.3s ease;
        }
        a {
            color: #4CAF50;
            text-decoration: none;
            font-weight: bold;
        }

        a:hover {
            color: #45a049;
        }
        .back-icon {
            position: absolute;
            top: 20px;
            left: 40px;
            color: #4CAF50;
            font-size: 24px;
            font-weight: bold;
            cursor: pointer;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .back-icon:hover {
            color: #45a049;
        }

        @media (max-width: 600px) {
            table {
                font-size: 0.9rem;
            }

            .table-container {
                width: 100%;
                padding: 10px;
            }
        }
    </style>
</head>
<body>
    <a href="/Home" class="back-icon">&larr; Back</a>

    <h1>Beneficiaries List</h1>
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Problem</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                <% beneficiaries.forEach(function(beneficiary) { %>
                    <tr>
                        <td><%= beneficiary.name %></td>
                        <td><%= beneficiary.email %></td>
                        <td><%= beneficiary.problem %></td>
                        <td><%= beneficiary.amount %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
